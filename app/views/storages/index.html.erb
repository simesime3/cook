<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>アカウント名:<% @current_user.name %></h1>
        <!--　画像が保存されていたら表示 -->
        <% if @self %>
          <%= image_tag @self.image.url, class: 'about-me-widget-thumb' %>
        <% end %>
          <%= form_for @selffot, url: {controller: :images} do |f| %>
        <div>
          <%= f.label :image %>
          <%= f.file_field :image%>
          <%= f.submit '保存' %>
        </div>
        <% end %>
        <h1 class="text-center">食材登録</h1>
        <%= form_for @storage do |f| %>
          <div class="form-group">
            <%= f.label :category ,class: "box"%>
            <%= f.select :category, [["調味料", "調味料"], ["野菜", "野菜"], ["肉", "肉"],["魚", "魚"]],  class: 'box' %>
            <%= f.label :material ,class: "box"%>
            <%= f.text_area :material, class: 'box' %>
            <%= f.submit '保存', class: 'box' %>
          </div>
        <% end %>
        <!--　保存されたstorageを表示 -->
        <h1>所有物</h1>
        <h2>調味料</h2>
          <% @storages.where(category: "調味料").each do |f| %>
            <%= f.material %>
            <%= link_to '削除', storage_path(@material), method: :delete, class: "btn btn-primary btn-xs" %>
          <% end %>
      </div>
    </div>
</div>
