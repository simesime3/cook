<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="font-shadow-into-light"><%= current_user.name %></h1>
        <!--　画像が保存されていたら表示 -->
        <% if self_image %>
          <%= image_tag self_image.image.url, class: 'about-me-widget-thumb' %>
        <% else %>
          <img src="img/about-img/no-image.png" alt="">
        <% end %>
          <%= form_for @my_image, url: {controller: :my_images} do |f| %>
        <div>
          <%= f.label :image %>
          <%= f.file_field :image%>
          <%= f.submit '保存' %>
        </div>
        <% end %>
        <h1>食材登録</h1>
        <%= form_for @my_page do |f| %>

            <div class="form-group">
              <%= f.label :category_id, class: "box"%>
              <%= f.select :category_id, @categories.each {|c| [[%W(#{c.name.to_s})],%W(#{c.id.to_i})]}, class: 'box' %>
              <%= f.label :material_id, class: "box"%>
              <%= f.text_area :material_id, class: 'box' %>
              <%= f.submit '保存', class: 'box' %>
            </div>

        <% end %>
        <!--　保存されたmy_imageを表示 -->
        <h1>所有物</h1>

      </div>
    </div>
</div>
